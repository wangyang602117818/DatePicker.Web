// Configure bundling and minification for the project.
// More info at https://go.microsoft.com/fwlink/?LinkId=808241
[
  {
    "outputFileName": "wwwroot/css/layout.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/layout.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/site.min.js",
    "inputFiles": [
      "wwwroot/js/site.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": false
  },
  {
    "outputFileName": "wwwroot/datepicker/datepicker.min.js",
    "inputFiles": [
      "datepicker/datepicker.js"
    ]
  },
  {
    "outputFileName": "wwwroot/datepicker/datepicker-cyan.min.css",
    "inputFiles": [
      "datepicker/datepicker-cyan.css"
    ]
  },
  {
    "outputFileName": "wwwroot/datepicker/datepicker-orange.min.css",
    "inputFiles": [
      "datepicker/datepicker-orange.css"
    ]
  }
]
