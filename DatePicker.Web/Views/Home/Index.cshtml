@{
    ViewData["Title"] = "Home Page";
}
@section script{
    <link href="~/css/home-index.css" rel="stylesheet" />
}
<script type="text/javascript">
    $(function () {
        $(".sub_left li").click(function () {
            var html_url = $(this).attr("html");
            $(".right").loading();
            $.get(html_url, function (data) {
                $(".right").html(data);

            })

        });
    });
</script>
<div class="left">
    <ul class="sub_left">
        <li class="intro" html="/html/intro.html">
            <i class="fa fa-list-ul" aria-hidden="true"></i> 简介
        </li>
        <li class="begin" html="/html/begin.html">
            <i class="fa fa-arrow-circle-right" aria-hidden="true"></i> 开始
        </li>
    </ul>
</div>
<div class="right">

</div>